@using CashIQ.Enums
@model Expense
@{
    <form method="post" asp-action="Create">
        <label asp-for="Title">Title</label>
        <br />
        <input type="text" asp-for="Title" required />
        <br />
        <br />
        <label asp-for="Description">Description</label>
        <br />
        <input type="text" asp-for="Description" />
        <br />
        <br />
        <label asp-for="Amount">Amount</label>
        <br />
        <input type="number" step="0.01" asp-for="Amount" required />
        <br />
        <br />
        <label asp-for="Frequency">Frequency</label>
        <br />
        <select asp-for="Frequency" required>
            @foreach(Frequency freq in Enum.GetValues(typeof(Frequency)))
            {
                <option value="@freq">@freq</option>
            }
        </select>
        <br />
        <br />
        <button type="submit">Add</button>
    </form>
}